{
"builders": [
    {
      "type": "docker",
      "image": "alpine:latest",
      "commit": true,
      "changes": [
        "ENTRYPOINT /bin/sh"
        ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./scripts/alpine.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "amine7777/alpine-test",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ]
  ]
}
