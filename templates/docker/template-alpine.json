{
  "variables": {
    "image_repository": "amine7777/alpine-apd",
    "image_tag": "latest",
    "upstream_image": "alpine:latest"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{ user `upstream_image` }}",
      "commit": true,
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "/bin/sh -x '{{.Path}}'",
      "scripts": [
        "./scripts/alpine.sh"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./install_packer.yml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `image_repository` }}",
        "tag": "{{ user `image_tag` }}"
      },
      "docker-push"
    ]
  ]
}

