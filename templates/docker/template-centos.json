{
  "variables": {
    "image_repository": "amine7777/centos-ansible",
    "image_tag": "latest",
    "upstream_image": "centos:7"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{ user `upstream_image` }}",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./scripts/centos.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `image_repository` }}",
        "tag": "{{ user `image_tag` }}"
      },
      "docker-push"
    ]
  ]
}
